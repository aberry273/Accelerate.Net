@using System.Collections.Generic
@using System.Linq
@using Accelerate.Features.Content.Models.Views
@using Accelerate.Foundations.Common.Helpers
@using Accelerate.Foundations.Content.Models.Data
@using Microsoft.AspNetCore.Http
@model ContentCreatePage
@{
    Layout = "/Views/Shared/_ContentPageLayout.cshtml";
    var currentTab = "All";
}
<div class="w-max" x-data="{
    init() {
        this.$events.On('@Model.Form.Event', async (e)=>
            {
                const delay = ms => new Promise(res => setTimeout(res, ms));
                await delay(500);
                window.location.href = '@Model.RedirectRoute/'+e.id
            })
        },
    }">
    <!-- Form -->
    <div x-data="aclFormAjax(@JsonSerializerHelper.SerializeObject(Model.Form))"></div>
</div>
